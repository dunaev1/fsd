//-
  opt.pic             int
  opt.header          str
  opt.body            str
  opt.underline       bool (true)

include ./ico_facil.pug

mixin facility(opt)
  -
    var pic = 0, header = "header", body = "body", underline = true
    if (typeof(opt) != "undefined") {
      typeof(opt.pic) != "undefined" && (pic = opt.pic)
      typeof(opt.header) != "undefined" && (header = opt.header)
      typeof(opt.body) != "undefined" && (body = opt.body)
      typeof(opt.underline) != "undefined" && (underline = opt.underline)
    }
  .facility(style= !underline ? "border-bottom: none" : "")
    .pic
      case pic
        when 1
          +ico_city
        when 2
          +ico_hot
        default
          +ico_smile
    .content
      .header= header
      .body= body
