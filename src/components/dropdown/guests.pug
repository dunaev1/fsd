include ./ico_drop
include ../button/button

mixin guests(options)
  -
    var title = "Гости", type = "guests", text = "Сколько гостей"
    var v = [0, 0, 0]
    if(typeof(options) == 'object') {
      type = typeof(options.type) != 'undefined' ? options.type : type
      title = type == "rooms" ? "Удобства номера" : title
      title = typeof(options.custom_title) != 'undefined'  ? options.custom_title : title
      if (typeof(options.values) == 'object' && options.values.length == 3) v = options.values
    }
  .guestblock
    h3= title
    .guest-input(class="input-border dd-input" tabindex="0" onclick="window.handlers.guest_click(this.parentElement);")
      .guest-input-text= text
      +ico_drop
    .guest-content(class="dd-content" hidden)
      if(type == "rooms") 
        +_row({text: "Спальни", val: v[0]})
        +_row({text: "Кровати", val: v[1]})
        +_row({text: "Ванные комнаты", val: v[2]})
      else
        +_row({text: "Взрослые", val: v[0]})
        +_row({text: "Дети", val: v[1]})
        +_row({text: "Младенцы", val: v[2]})
        .footer-row
          +button({text: "Очистить"})
          .spacer
          +button({text: "Применить", type: "text-default"})


