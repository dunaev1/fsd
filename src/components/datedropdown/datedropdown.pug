//-
  opt.title
  opt.placeholder
  opt.text
mixin _drop(opt)
  -
    var title = "Date dropdown", placeholder = "ДД.ММ.ГГ", text
    if (typeof(opt) == "object") {
      typeof(opt.title) != "undefined" && (title = opt.title)
      typeof(opt.placeholder) != "undefined" && (placeholder = opt.placeholder)
      typeof(opt.title) != "undefined" && (title = opt.title)
      typeof(opt.text) != "undefined" && (text = opt.text)
    }
  .title= title
  .dd-input()
    input.dd-input-text(value= text placeholder= placeholder)
    .ico.dd-pic-collapsed
