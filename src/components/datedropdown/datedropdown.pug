//-
  opt.splitted      bool      // 2 dropdowns
  opt.dates         [date_start, date_fin]
  opt.captions      [cap_start, cap_fin]

include ../components/_dd_input/dd_input

mixin datedropdown(opt)
  -
    var splitted = false, dates = [], captions = ["Прибытие", "Выезд"] 
    if (typeof(opt) == "object") {
      typeof(opt.splitted) != "undefined" && (splitted = opt.splitted)
      if( typeof(opt.dates) != "undefined" && opt.dates.length == 2) dates = opt.dates
      if( typeof(opt.captions) != "undefined" && opt.captions.length == 2) captions = opt.captions
    }
  .datedropdown
    if splitted
      .date-splitted
        +dd_input({title: captions[0]})
        +dd_input({title: captions[1]})
    else
      .date-single
        +_drop({title: captions[0]})
