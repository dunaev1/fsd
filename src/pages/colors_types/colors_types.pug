include ../../components/logo/logo

//-
  opt [color:str, desc:str, hex:str]

mixin _color(opt)
  .color-item
    .square(style="background: " + opt[0] + ";")
    .spacer
    .content
      .desc= opt[1]
      .hex= opt[2]


//
  opt.style: int
  opt.text_header: str
  opt.text_desc: str

mixin _font(opt)
  -
    var text_header, text_desc, style = 0
    if (typeof(opt) == "object") {
      typeof(opt.text_header) != "undefined" && (text_header = opt.text_header)
      typeof(opt.text_desc) != "undefined" && (text_desc = opt.text_desc)
      typeof(opt.style) != "undefined" && (style = opt.style)
    }
    var hstyle = "h" + style, dstyle = "d" + style
  .font-item
    .header(class= hstyle)= text_header
    .desc(class= dstyle)= text_desc

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    title Colors and types
    link(rel="stylesheet" type="text/css" href="main.css")    
  body
    .colors-types
      .logo-container
        +logo
      .margin
      .left
        +_color(["var(--c_dark100)", "Dark Shade 100%", "#1F2041"])
        +_color(["var(--c_dark75)", "Dark Shade 75%", "#1F2041"])
        +_color(["var(--c_dark50)", "Dark Shade 50%", "#1F2041"])
        +_color(["var(--c_dark25)", "Dark Shade 25%", "#1F2041"])
        +_color(["var(--c_dark05)", "Dark Shade 5%", "#1F2041"])
        +_color(["var(--c_purple)", "Purple", "#BC9CFF"])
        +_color(["var(--c_green)", "Green", "#6FCF97"])
      .center
        +_font({style: 1, text_header: "H1", text_desc: "This one is the sub-section or widget title"})
        +_font({style: 2, text_header: "H2", text_desc: "Next one is the item title inside widgets"})
        +_font({style: 3, text_header: "H3", text_desc: "This is a label or CTA text"})
        +_font({style: 0, text_header: "Body", text_desc: "This is the body text which is used for most of the design, like paragraphs, lists, etc."})
      .margin

